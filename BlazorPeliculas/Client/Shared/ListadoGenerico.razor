@typeparam T

@if (Listado == null)
{
    if (Cargando == null)
    {
        <text>Cargando...</text>
    }
    else
    {
        @Cargando;
    }
}
else if (Listado.Count == 0)
{
    if (NoHayRegistros == null)
    {
        <text>No hay películas para mostrar</text>
    }
    else
    {
        @NoHayRegistros;
    }
}
else
{
    foreach (var item in Listado)
    {
        @HayRegistros(item)
    }
}

@code {

    [Parameter]
    public RenderFragment Cargando { get; set; }

    [Parameter]
    public RenderFragment NoHayRegistros { get; set; }

    [Parameter]
    public RenderFragment<T> HayRegistros { get; set; }

    [Parameter]
    public List<T> Listado { get; set; }
}
