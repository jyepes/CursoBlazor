<div>
    <p>Título: <b>@Pelicula.Titulo</b></p>
    <p>Fecha lanzamiento: <b>@Pelicula.Lanzamiento.ToString("dd MMM yyyy")</b></p>
    @if (DisplayButton)
    {
        <div>
            <button type="button" class="btn btn-warning" @onclick="(()=> DeleteMovie.InvokeAsync(Pelicula))">Eliminar</button>
        </div>
    }

</div>

@code {

    [Parameter]
    public Pelicula Pelicula { get; set; }

    [Parameter]
    public bool DisplayButton { get; set; } = false;

    [Parameter]
    public EventCallback<Pelicula> DeleteMovie { get; set; }

}
