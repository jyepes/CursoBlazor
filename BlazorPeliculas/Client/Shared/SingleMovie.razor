<div style="margin-right: 2%; margin-bottom: 10px; text-align:center ">
    <a href="#">
        <img src="@Pelicula.Poster" alt="Poster" style="width:225px; height:300px" />
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight:bold">@Pelicula.TituloCorto</p>
    <div>
        <a href="#" class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="(()=> DeleteMovie.InvokeAsync(Pelicula))" >Borrar</button>
    </div>
</div>

@code {

    [Parameter]
    public Pelicula Pelicula { get; set; }

    [Parameter]
    public EventCallback<Pelicula> DeleteMovie { get; set; }

}
