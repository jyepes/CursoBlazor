<div>
    <p>Título: <b>@Pelicula.Titulo</b></p>
    <p>Fecha lanzamiento: <b>@Pelicula.Lanzamiento.ToString("dd MMM yyyy")</b></p>
    @if (DisplayButton)
    {
        <div>
            <button class="btn-primary" @onclick="Eliminar">Eliminar</button>
        </div>
    }

</div>

@code {

    [Parameter]
    public Pelicula Pelicula { get; set; }
    [Parameter]
    public bool DisplayButton { get; set; } = false;

    void Eliminar()
    {
        Console.WriteLine($"Eliminando película {Pelicula.Titulo}");
    }
}
